<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <title>Members Only - Membership Page</title>
  </head>

  <body>

    <% if (errors) { %>
      <div id="errors-cont">
	<% errors.map(err => { %>
	  <p><%= err.msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (currentUser) {%>
      <h1>Become a Member</h1>
      <form action="/membership" method="POST">
        <label for="password">Enter Membership Code</label>
        <input name="password" placeholder="Membership Code" type="password" />
        <button>Submit</button>
      </form>
    <% } else { %>
      <h2>You Must be logged in to access this page</h2>
    <%}%>

  </body>

</html>


