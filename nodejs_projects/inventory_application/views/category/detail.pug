extends ../templates/layout

block content
  if category.name
    h1 Category: #{category.name}

    p #[strong Description:] #{category.description}

    dl
      each item in items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This category has no items

    hr
    p
      a(href=category.url+'/delete') Delete category
    p
      a(href=category.url+'/update') Update category
  else
    p No category found


