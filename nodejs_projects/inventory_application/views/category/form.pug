extends ../templates/layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Name of Category' name='name' required='true' value=(category === undefined ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{category === undefined ? '' : category.description}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg



