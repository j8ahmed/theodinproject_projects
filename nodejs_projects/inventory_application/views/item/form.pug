extends ../templates/layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Item Name:
      input#title.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(item === undefined ? '' : item.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select Category' name='category' required='true' )
        - 
          categories.sort((a, b) => {
            let textA = a.name.toUpperCase()
            let textB = b.name.toUpperCase()
            return (textA < textB) ? -1 : (textA > textB) ? 1 : 0
          })
        for category in categories
          if item
            //- Handle GET form, where item.category is an object, and POST form, where it is a string.
            option(
              value=category._id
              selected=(
                category._id.toString() == item.category._id
                || category._id.toString() == item.category
              ) ? 'selected' : false
            ) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{item === undefined ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='5.00' name='price' value=(item === undefined ? '' : item.price) required='true')
    div.form-group
      label(for='quantity') Quantity:
      input#price.form-control(type='number', placeholder='3' name='quantity' value=(item === undefined ? '' : item.quantity) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg



