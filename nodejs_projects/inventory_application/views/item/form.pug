extends ../templates/layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Item Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(item === undefined ? '' : item.name) )
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='categories', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{item === undefined ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='5.00' name='price' value=(item === undefined ? '' : item.price) required='true')
    div.form-group
      label(for='quantity') Quantity:
      input#price.form-control(type='number', placeholder='3' name='quantity' value=(item === undefined ? '' : item.quantity) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg



